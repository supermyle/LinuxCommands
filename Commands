#SHOW LIST OF ALL GRAPHICS CARDS AND PORTS THEY HAVE
ls /sys/class/drm/card*

#RETURN FULL LIST OF SUPPORTED RESOLUTIONS
cat /sys/class/drm/card1-DP-1/modes 

#OPEN MONITOR CONFIGURATION FILES (WAYLAND DISPLAY SERVER)
vim ~/.config/monitors.xml* -p

#OUTPUT MONITOR EDID (EXTENDED DISPLAY IDENTIFICATION DATA) - VESA STANDARD DATA FORMAT CONTAINING INFO ABOUT MONITOR
monitor-edid

#EDIT GRUB CONFIGURATION FILE
vim /etc/default/grub

#ADD NEW DISPLAY RESOLUTION AND REFRESH RATE
GRUB_CMDLINE_LINUX="rhgb quiet video=DP-1:1920x1080@65"

#REGENERATE THE GRUB CONFIGURATION TO APPLY CHANGES
grub2-mkconfig -o /boot/efi/EFI/fedora/grub.cfg
